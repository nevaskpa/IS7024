@page
@model CafeRecords.Pages.SearchCafeOwnerModel
@{
    ViewData["Title"] = "SearchCafeOwner";
    CafeRecord.Cafe[] cafes = (CafeRecord.Cafe[])ViewData["allCafes"];
}

<head>
        
        <link rel="stylesheet" href="~/css/StyleSheet.css" type="text/css" />
 </head>
<style>
body  {
  background-image: url("https://www.wallpaperup.com/uploads/wallpapers/2013/04/26/78634/998a3ff861f850b7d0ff68a47789ba3f-700.jpg");
  background-color: #cccccc;

height: 100%; 
background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
    text-emphasis-color: white;
  }

</style>

<html>
<body>
<div class="text-center">
<h1 class="hdr-text">Search Cafe</h1>
<br />
</div>
<form action="" method="POST">
    <div class="form-group">
        <label class="control-label" for="search"><strong></strong></label>
        <input type="text" class="form-control" name="search" id="search" required />
    </div>
    <div class="form-group">
        <input type="submit" value="Search Cafe Owners" class="btn btn-danger" />
    </div>
</form>

@if (Model.SearchCompleted)
{
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <nav>
                    <div class="nav nav-tabs nav-fill" role="tablist">
                        <a class="nav-item nav-link active" data-toggle="tab" href="#businessOwners" role="tab" aria-controls="nav-home" aria-selected="true">Cafe Details</a>
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="businessOwners" role="tabpanel">
                        <table class="table table-border table-striped table-hover auto-index" bgcolor="white">
                            <thead>
                                <tr align="center">
                                    <th align="left">Account Number</th>
                                    <th align="center">Cafe Name</th>
                                    <th align="center">Address</th>
                                    <th align="right">Business Name</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.cafes.Count() > 0)
                                {
                                    @foreach (var cafe in Model.cafes)
                                    {
                                <tr>
                                    <td align="center">@cafe.AccountNumber</td>
                                    <td align="center">@cafe.DoingBusinessAsName</td>
                                    <td align="center">@cafe.Address</td>
                                    <td align="center">@cafe.LegalName</td>
                                </tr>
                                    }
                                }
                                else
                                {
                                    <tr class="danger" align="center">
                                        <td colspan="5" class="text-center">
                                            <span class="font-weight-bolder text-danger">No results found for term "@Model.Search"</span>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

</body>
</html>